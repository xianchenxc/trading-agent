{
  "name": "trading-agent",
  "version": "1.0.0",
  "description": "A TypeScript-based cryptocurrency trend-following trading agent with three-layer architecture (Instance/Core/Engine), supporting backtesting, paper trading, and config-driven multi-instance strategy management",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "backtest": "ts-node src/index.ts --mode=backtest",
    "paper": "ts-node src/index.ts --mode=paper",
    "live": "ts-node src/index.ts --mode=live",
    "robustness": "ts-node src/tools/robustness.ts",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "trading",
    "crypto",
    "cryptocurrency",
    "trading-bot",
    "trading-agent",
    "backtest",
    "backtesting",
    "paper-trading",
    "trend-following",
    "binance",
    "typescript",
    "strategy",
    "risk-management"
  ],
  "author": "xianchenxc <william.g9211@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}